{% extends "base.html.twig" %}
{% set menu_name = "trainer_user" %}
{% use "menu_trainer_home_page.html.twig" %}
{% block content %}
        <div class="background" id="background">
        {% include "flash_messages.html.twig" %}
        <div class="main_content">
          <div class="center_content">
            <div class="grid_panel">
              <div class="user_trainings_list">
                <div class="d-flex pt-3 pr-3" style="">
                  <a href="{{ path("trainer_users")}}" class="btn-sm btn-dark btn-block add_plan_btn text-center" role="button"><i class="fas fa-backward"></i>  Powrót na listę</a>
                </div>
                <div class="row text-center pt-4 pl-4 pr-4 pb-4">
                  <h2>Tu znajdują się <span class="text-success">plany </span> udostępnione dla  {{ participant.firstName }} {{ participant.lastName }} </h2>
                </div>
                <div class="row text-center pt-4 pl-4 pr-4 pb-4">
                  <table class="table">
                    <tr>
                      <th>Nazwa Planu</th>
                      <th colspan="1">Akcje</th>
                    </tr>
                      {% for participantPlan in participantsWithPlans %}
                      <tr>
                        <td> {{ participantPlan.planName }} </td>
                        <td><a href="{{ path("remove_access_for_training_plan", {'trainingPlanAccess': participantPlan.idAccess, 'trainingPlan': participantPlan.idTrainingPlan })}}" class="text-dark">Odepnij od planu<i class="fas fa-user-times fa-x2 pl-2"></i></a></td>
                    </tr>
                      {% endfor %}
                    </table>
                </div>
            </div>
          </div>
        </div>
        </div>
        </div>
{% endblock %}