{% extends "base.html.twig" %}
{% set menu_name = "subscription" %}
{% use "menu_admin_home_page.html.twig" %}
{% block content %}
       <div class="background" id="background">
        {% include "flash_messages.html.twig" %}
        <div class="main_content_less_margin">
          <div class="center_content">
            <div class="grid_panel">
              <div class="user_trainings_list">
            <div class="d-flex pt-3 pr-3" style="">
              <a href="{{ path("subscription_list")}}" class="btn-sm btn-dark btn-block add_plan_btn text-center" role="button"><i class="fas fa-backward"></i>  Powrót na listę</a>
            </div>
            <div class="d-flex justify-content-center">
            <div class="d-flex flex-column justify-content-center add_diet_plan_form">
                <div class="text-center pt-0 pl-4 pr-4 pb-2">
                  <h2>Dodaj nową subskrypcję dla {{ fullName }}</h2>
                </div>
                <div class="d-flex flex-column justify-content-centerr pt-4 pl-4 pr-4 pb-4">
                  {{ form_start(form, {'method': 'POST', 'attr': {'class': 'text-center'}})}}
                    <div class="form-control">
                      {{ form_widget(form, {'attr': {'class': 'custom_input', 'name': 'Plan Name', 'placeholder': 'Plan Name', 'id': 'planName'}})}}
                      <small>{{ form_help(form) }}</small>
                      <div class="form-error">
                        {{ form_errors(form) }}
                      </div>
                    </div>
                  {{ form_end(form) }}
                </div>
            </div>
            </div>
          </div>
        </div>
        </div>
        </div>
{% endblock %}