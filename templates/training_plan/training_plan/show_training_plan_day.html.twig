{% extends "base.html.twig" %}
{% use "menu_trainer_home_page.html.twig" %}
{% block content %}
        <div class="background" id="background">
                {% include "flash_messages.html.twig" %}
        <div class="main_content">
          <div class="center_content">
            <div class="grid_panel">
              <div class="user_trainings_list">
                <div class="row text-center pt-4 pl-4 pr-4 pb-4">
                  <h2><span class="text-success">NAZWA PLANU</span></h2><br>
                  <small>Tu znajdziesz konkretne dni twojego planu</small>
                </div>
                <div class="d-flex justify-content-center">
                  <nav aria-label="Page navigation example text-center ">
                    <ul class="pagination pagination-lg">
                      <li class="page-item">
                        <a class="page-link text-dark" href="#" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                          <span class="sr-only">Previous</span>
                        </a>
                      </li>
                      <li class="page-item disabled"><a class="page-link text-dark" href="#">DISABLED</a></li>
                      <li class="page-item"><a class="page-link text-dark" href="#">NAZWA DNIA</a></li>
                      <li class="page-item"><a class="page-link text-dark" href="#">NAZWA DNIA 3</a></li>
                      <li class="page-item">
                        <a class="page-link text-dark" href="#" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
                    </ul>
                  </nav>
                </div>
                <div class="row text-center pt-4 pl-4 pr-4 pb-4" style="overflow-x:auto;" >
                  <table class="table-xsm table-responsive-sm">
                    <tr>
                      <th>Partia</th>
                      <th>Nazwa ćwiczenia</th>
                      <th>Serie</th>
                      <th>Powtórzenia</th>
                      <th>Czas ćwiczenia</th>
                      <th>Przerwa</th>
                      <th>Opis  <i class="fas fa-pen-square"></i></th>
                    </tr>
                    {% for trainingPlanDay in trainingPlanDays %}
                    <tr>
                      <td>{{ trainingPlanDay.muscleGroup }}</td>
                      <td>{{ trainingPlanDay.exerciseName }}</td>
                      <td>{{ trainingPlanDay.sets }}</td>
                      <td>{{ trainingPlanDay.reps }}</td>
                      <td>{{ trainingPlanDay.time }}</td>
                      <td>{{ trainingPlanDay.break }}</td>
                      <td>Opis z możliwością wklejenia linku</td>
                    </tr>
                    {% endfor %}
                    </table>
                </div>
            </div>
          </div>
        </div>
        </div>
        </div>
{% endblock %}